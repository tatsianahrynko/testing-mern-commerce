{
    "plugins": ["mocha"],
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-unused-vars": "off",
        "space-before-blocks": ["error", "always"],
        "block-spacing": ["error", "always"],
        "object-curly-spacing": ["error", "always"],
        "arrow-parens": ["error", "always"],
        "arrow-body-style": ["error", "always"],
        "arrow-spacing": "error",
        "comma-spacing": ["error", {"after": true}],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
